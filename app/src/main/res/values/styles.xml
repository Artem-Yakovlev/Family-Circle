<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAppTagLine</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!-- Bottom Navigation application theme. -->
    <style name="BottomNavigation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAppTagLine</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!-- Login page-->

    <!-- First presentation start use button-->
    <style name="FormButton" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorModernPrimary</item>
    </style>

    <!-- Start input phone number page-->
    <style name="StartInputPhoneNumberInputStyle">
        <item name="colorControlNormal">@color/colorAppTagLine</item>
        <item name="colorControlActivated">@color/colorAppTagLine</item>
        <item name="colorControlHighlight">@color/colorAppTagLine</item>
        <item name="colorAccent">@color/colorAppTagLine</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorAppTagLine</item>
    </style>


    <!-- Common text input style-->
    <style name="CommonOnWhiteInputStyle">
        <item name="colorControlNormal">@color/colorAppTagLine</item>
        <item name="colorControlActivated">@color/colorAppTagLine</item>
        <item name="colorControlHighlight">@color/colorAppTagLine</item>
        <item name="colorAccent">@color/colorAppTagLine</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorAppTagLine</item>
    </style>

    <style name="DateButton" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorModernPrimary</item>
    </style>

</resources>
