<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAppTagLine</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>


    <!-- Login page-->
    <style name="LoginPageTextEditStyle">
        <item name="colorControlNormal">@color/colorAppTagLine</item>
        <item name="colorControlActivated">@color/colorAppTagLine</item>
        <item name="colorControlHighlight" >@color/colorAppTagLine</item>
        <item name="colorAccent">@color/colorAppTagLine</item>
        <item name="android:textColorHint">@color/colorAppTagLine</item>
        <item name="android:textColor">@color/colorAppTagLine</item>
    </style>

    <!-- First presentation start use button-->
    <style name="FormButton" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorModernPrimary</item>
    </style>

    <!-- Start input phone number page-->
    <style name="StartInputPhoneNumberInputStyle">
        <item name="colorControlNormal">@color/colorAppTagLine</item>
        <item name="colorControlActivated">@color/colorAppTagLine</item>
        <item name="colorControlHighlight" >@color/colorAppTagLine</item>
        <item name="colorAccent">@color/colorAppTagLine</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorAppTagLine</item>
    </style>

    <!-- Dialog interface buttons-->

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#00f</item>
    </style>

</resources>
