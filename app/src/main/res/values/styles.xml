<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Login page-->
    <style name="LoginPageTextEditStyle">
        <item name="colorControlNormal">@color/colorAppTagLine</item>
        <item name="colorControlActivated">@color/colorAppTagLine</item>
        <item name="colorControlHighlight" >@color/colorAppTagLine</item>
        <item name="colorAccent">@color/colorAppTagLine</item>
        <item name="android:textColorHint">@color/colorAppTagLine</item>
        <item name="android:textColor">@color/colorAppTagLine</item>
    </style>

    <!-- First presentation start use button-->
    <style name="FormButton" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorModernPrimary</item>
    </style>
</resources>
