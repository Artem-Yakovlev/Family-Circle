<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/history_errand_cardview_interaction_text"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_errand_cardview_interaction_placeholder"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/poppins_medium"
                tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/history_errand_cardview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your errands for others and my errands for others and errands for others Your errands for others fix errands for others Your errands for so errands for others"
                android:fontFamily="@font/poppins" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/history_errand_cardview_status_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_close_red_36dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>