<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="60dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/start_presentation_slide_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_start_presentation_happy_foreground"
        android:layout_marginBottom="@dimen/start_presentation_margin_between_title_and_text"/>

    <TextView
        android:id="@+id/start_presentation_slide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_presentation_happy_family_title"
        android:textSize="@dimen/start_presentation_title_size"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="@dimen/start_presentation_margin_between_title_and_text"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/start_presentation_slide_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_presentation_happy_family_text"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/start_presentation_text_size"/>

</LinearLayout>