<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.conversationpart.chatpart.MessagingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/in_conversation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="@string/main_live_page_toolbar_title"
        app:titleTextColor="@color/colorWhite" />

    <fragment
        android:id="@+id/in_conversation_main_container"
        android:name="com.tydeya.familycircle.ui.conversationpart.inconversation.conversationfragment.InConversationFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>