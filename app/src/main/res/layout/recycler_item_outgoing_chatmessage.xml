<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    tools:ignore="SmallSp, RtlHardcoded">


    <TextView
        android:id="@+id/outgoing_message_text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/message_text_item_background_blue"
        android:fontFamily="@font/poppins"
        android:maxWidth="300dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hi mark! What are you thinking about my new pants?" />

    <TextView
        android:id="@+id/outgoing_message_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/outgoing_message_text_body"
        app:layout_constraintLeft_toRightOf="@+id/outgoing_message_text_body"
        tools:text="11:40" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/who_saw_message_recycler_view"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@+id/outgoing_message_text_body"
        app:layout_constraintStart_toStartOf="@+id/outgoing_message_text_body"
        app:layout_constraintTop_toBottomOf="@+id/outgoing_message_text_body"
        tools:listitem="@layout/recycler_item_chatmessage_viewed_user_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>