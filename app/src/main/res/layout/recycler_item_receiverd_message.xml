<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    tools:ignore="SmallSp, RtlHardcoded">

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/received_message_author_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_mode="circle"
        app:stroke_color="@color/colorTransparentGray"
        app:stroke_width="2dp" />

    <TextView
        android:id="@+id/received_message_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/received_message_author_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Artem Yakovlev" />

    <TextView
        android:id="@+id/received_message_text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/message_text_item_background_orange"
        android:fontFamily="@font/poppins"
        android:maxWidth="300dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/received_message_author_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hi man! What are you thinking about my new pants?" />

    <TextView
        android:id="@+id/received_message_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/received_message_text_body"
        app:layout_constraintLeft_toRightOf="@+id/received_message_text_body"
        tools:text="11:40" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/who_saw_message_recycler_view"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:minWidth="100dp"
        app:layout_constraintEnd_toEndOf="@+id/received_message_text_body"
        app:layout_constraintStart_toStartOf="@+id/received_message_text_body"
        app:layout_constraintTop_toBottomOf="@+id/received_message_text_body"
        tools:listitem="@layout/recycler_item_chatmessage_viewed_user_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>