<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.planpart.eventreminder.EventReminderFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/event_reminder_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="@string/event_reminder_toolbar_title"
        app:titleTextColor="@color/colorWhite" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp">

                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    app:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/year"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    app:fontFamily="@font/poppins" />

            </FrameLayout>

            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                android:id="@+id/event_reminder_main_calendar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:compactCalendarBackgroundColor="@color/colorWhite"
                app:compactCalendarCurrentDayBackgroundColor="@color/colorWhite"
                app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorPrimary"
                app:compactCalendarMultiEventIndicatorColor="@color/colorBlack"
                app:compactCalendarCurrentSelectedDayTextColor="@color/colorWhite"
                app:compactCalendarCurrentDayTextColor="@color/colorPrimary"
                app:compactCalendarTargetHeight="300dp"
                app:compactCalendarTextColor="@color/colorBlack"
                app:compactCalendarTextSize="12sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>