<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/message_author_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_image_test_whiteman"
        app:shape_mode="circle"
        app:stroke_color="@color/colorTransparentGray"
        app:stroke_width="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/message_text_name"
        android:text="Artem Yakovlev"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/message_author_image"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/message_text_body"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:text="Hi man! What are you thinking about my new pants?"
        android:textColor="@color/colorWhite"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:background="@drawable/message_text_item_background_orange"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/message_author_image"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/message_text_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/message_text_body"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/message_text_body" />

</androidx.constraintlayout.widget.ConstraintLayout>